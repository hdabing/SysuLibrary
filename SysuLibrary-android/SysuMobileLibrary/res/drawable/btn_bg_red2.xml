<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="30dp" />

            <stroke android:width="1dp" android:color="@color/red" />

            <gradient android:angle="90" android:endColor="@color/red" android:startColor="@color/red" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/puple" />

            <corners android:radius="30dp" />
        </shape></item>

</selector>